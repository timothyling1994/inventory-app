extends layout

block content
  div(class="category-list-header-container")
    div(class="category-list-header")= title

  - category_list.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
  each category in category_list
    div(class="category-list-container")
      li(class="category-list")
        a(href=category.url) #{category.name}


  else
    li There are no categories.

  div(class="add-category-btn-container") 
    div(class="add-category-btn")
      a(href="/catalog/category/create") Add Category