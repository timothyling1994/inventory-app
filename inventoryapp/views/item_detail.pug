extends layout

block content

  div(class="category-header")=title

  div(class="category-description") #[strong description:] #{item.description}

  div(class="category-description") #[strong price:] #{item.price}

  div(class="category-description") #[strong stock:] #{item.stock}

  div(class="category-description") #[strong category:] #{item.category.name}

  hr

  div(class="row")
    div(class="row-attributes")
      a(href=item.url+'/delete') Delete Item
    div(class="row-attributes")
      a(href=item.url+'/update') Update Item